<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".InscripcionGuia">

<TextView
    android:id="@+id/eresguia"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/tituloguia"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.3"
    android:fontFamily="sans-serif-black"
    android:textSize="20sp"
    android:textColor="@color/fondo"
    />

    <TextView
        android:id="@+id/inscri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inscribete"
        app:layout_constraintTop_toBottomOf="@id/eresguia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/nombrecompletoguia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inscri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:hint="@string/nombreguia"
        android:gravity="center"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/correoguia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nombrecompletoguia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"
        android:hint="@string/correoguia"
        android:gravity="center"
        android:inputType="textEmailSubject"
        />
    <EditText
        android:id="@+id/telefonoguia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correoguia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"
        android:hint="@string/telefonoguia"
        android:gravity="center"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/descripcion"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/telefonoguia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"
        android:hint="@string/pequedescripcion"
        android:gravity="center"
        android:inputType="text"
        />

    <Button
        android:id="@+id/btnregistrar"
        android:layout_width="90dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        android:hint="@string/registrar"
        android:background="@color/fondo"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        />
</android.support.constraint.ConstraintLayout>