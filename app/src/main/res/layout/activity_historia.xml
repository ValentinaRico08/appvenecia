<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".Historia">

    <ImageView
                android:id="@+id/imagenParque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/parque"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35" />

    <ImageView
        android:id="@+id/imagenCerroTusa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cerrotusa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/imagenParque"
        app:layout_constraintVertical_bias="0.1" />
    <ImageView
        android:id="@+id/imagencarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/carro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@id/imagenParque"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <ImageView
        android:id="@+id/imagenPlaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/colonialvenecia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@id/imagenCerroTusa"
        app:layout_constraintTop_toBottomOf="@id/imagencarro"
        app:layout_constraintVertical_bias="0.1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/tituloHistoria"
    android:textColor="@color/fondo"
    android:fontFamily="sans-serif-black"
    android:textSize="20dp"
    app:layout_constraintTop_toBottomOf="@id/imagenCerroTusa"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.3"/>


        </android.support.constraint.ConstraintLayout>





